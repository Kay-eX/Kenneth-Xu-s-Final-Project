   <script>
function doClear()
{
document.gform.customer.value = "";
document.gform.address.value = "";
document.gform.city.value = "";
document.gform.state.value = "";
document.gform.zip.value = "";
document.gform.phone.value = "";

document.gform.mt[0].checked = false;
document.gform.mt[1].checked = false;
document.gform.mt[2].checked = false;
document.gform.mt[3].checked = false;

document.gform.hc[0].checked = false;
document.gform.hc[1].checked = false;
document.gform.hc[2].checked = false;
document.gform.hc[3].checked = false;
document.gform.hc[4].checked = false;
document.gform.hc[5].checked = false;
return;
}

function doSubmit()
{
	if (validateText() == false)
	{
		alert("Required data missing in Membership Details");
		return; 
	}
	if (validateRadio() == false) 
	{ 
		alert("Required data missing in Membership Term");
		return;
	}
	alert("Your membership registration has been submitted.");
	return; 
} 

function validateText()
{ 
	var customer = document.gform.customer.value;
	if (customer.length == 0) return false;
	var address = document.gform.address.value;
	if (address.length == 0) return false;
	var city = document.gform.city.value;
	if (city.length == 0) return false;
	var phone = document.gform.phone.value;
	if (phone.length == 0) return false;
	return true; 
} 

function validateRadio()
{ 
	if (document.gform.mt[0].checked) return true;
	if (document.gform.mt[1].checked) return true;
	if (document.gform.mt[2].checked) return true;
	if (document.gform.mt[3].checked) return true;
	return false; 
}
</script>
   
</head>

<body>
